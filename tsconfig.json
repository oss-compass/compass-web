{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@oss-compass/graphql": ["./packages/graphql/src/index"],
      "@oss-compass/ui": ["./packages/ui/src/index"],
      "@public/*": ["public/*"],
      "@common/*": ["src/common/*"],
      "@graphql/*": ["src/graphql/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./packages/graphql"
    },
    {
      "path": "./packages/ui"
    }
  ]
}
